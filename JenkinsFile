@Library('testUtils')_
pipeline 
{
    agent any
    stages
    {
        stage('Demo') 
        {
            steps
            {
                echo 'Hello world'
                sayHello 'Paco'
                script 
                {
                    def changeLogSets = currentBuild.changeSets
def b = changeLogSets.build
                    for (int i = 0; i < changeLogSets.size(); i++) 
                    {
                        def entries = changeLogSets[i].items
                        for (int j = 0; j < entries.length; j++) 
                        {
                           entry.getAffectedPaths().each{
                                path - echo path
                            }
                            entry.getAffectedFiles().each{
                                file - echo file
                            }
                        }
                    }
                
                }
            }
        }
    }
}
